FROM python:3.11-slim

WORKDIR /app

# Install UV package manager
RUN pip install --no-cache-dir uv

# Copy all project files (including README.md)
COPY . .

# Install dependencies using UV
RUN uv sync --no-dev || uv pip install fastapi uvicorn requests prometheus-client psutil rich jinja2 pydantic autogen-agentchat autogen-ext autogen-core

# Expose API port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8080/health')"

# Run API server
CMD ["uv", "run", "python", "src/brendan_api_server.py", "--host", "0.0.0.0", "--port", "8080"]
