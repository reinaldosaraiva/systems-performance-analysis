# ============================================================
# BRENDAN GREGG AGENT - Configuration Template
# ============================================================
# Copy this file to .env and customize for your environment
#
# Usage: cp .env.example .env
# ============================================================

# ============================================================
# API Configuration
# ============================================================
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false

# ============================================================
# Prometheus Configuration
# ============================================================
# Local Prometheus
PROMETHEUS_URL=http://localhost:9090

# Remote Prometheus (Production)
# PROMETHEUS_URL=http://177.93.132.48:9090

# Docker Compose (internal network)
# PROMETHEUS_URL=http://prometheus-local:9090

# ============================================================
# Ollama LLM Configuration
# ============================================================
# Local Ollama
OLLAMA_URL=http://localhost:11434/v1
OLLAMA_MODEL=minimax-m2:cloud
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=4096

# Docker Compose (access host from container)
# OLLAMA_URL=http://host.docker.internal:11434/v1

# ============================================================
# Storage Configuration
# ============================================================
REPORTS_DIR=reports
CACHE_DIR=.cache

# ============================================================
# Logging Configuration
# ============================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================
# Analysis Configuration
# ============================================================
ANALYSIS_INTERVAL=60
INSIGHTS_RETENTION_DAYS=30
MAX_INSIGHTS_PER_REQUEST=100

# ============================================================
# Dashboard Configuration
# ============================================================
DASHBOARD_REFRESH_INTERVAL=30
LLM_DASHBOARD_REFRESH_INTERVAL=300
