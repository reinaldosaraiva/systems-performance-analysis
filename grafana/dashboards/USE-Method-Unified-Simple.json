{
  "dashboard": {
    "id": 9,
    "title": "USE Method - Unified Dashboard (Simple)",
    "tags": ["use-method", "unified", "simple", "systems-performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Score - USE Method",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "description": "USE Method: Utilization (resource busy), Saturation (resource overloaded), Errors (resource failures). Lower score = better system health.",
        "targets": [
          {
            "expr": "max(max(100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)) or max((1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100) or max((1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100))",
            "legendFormat": "üéØ Sa√∫de Geral do Sistema (USE Method)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "textMode": "auto",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "short",
            "min": 0,
            "max": null
          }
        }
      },
      {
        "id": 2,
        "title": "CPU USE Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "description": "CPU: Utilization (time busy), Saturation (load average), Errors (steal time from hypervisor)",
        "targets": [
          {
            "expr": "100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "üíª Uso %",
            "refId": "A"
          },
          {
            "expr": "node_load1{job=\"node_exporter\"} / 8 * 100",
            "legendFormat": "‚ö° Carga %",
            "refId": "B"
          },
          {
            "expr": "avg(irate(node_cpu_seconds_total{mode=\"steal\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "‚ùå Erros %",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "textMode": "auto",
          "displayMode": "gradient"
        }
      },
      {
        "id": 3,
        "title": "Memory USE Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "description": "Memory: Utilization (memory used), Saturation (swap usage), Errors (OOM kills)",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100",
            "legendFormat": "üß† Uso %",
            "refId": "A"
          },
          {
            "expr": "(node_memory_SwapTotal_bytes{job=\"node_exporter\"} > 0) * ((1 - (node_memory_SwapFree_bytes{job=\"node_exporter\"} / node_memory_SwapTotal_bytes{job=\"node_exporter\"})) * 100) or (node_memory_SwapTotal_bytes{job=\"node_exporter\"} == 0) * 0",
            "legendFormat": "üíæ Swap %",
            "refId": "B"
          },
          {
            "expr": "rate(node_vmstat_oom_kill{job=\"node_exporter\"}[5m]) * 100",
            "legendFormat": "üíÄ OOM/seg",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 75},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "textMode": "auto",
          "displayMode": "gradient"
        }
      },
      {
        "id": 4,
        "title": "Disk USE Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "description": "Disk: Utilization (space used), Saturation (I/O wait time), Errors (read/write failures)",
        "targets": [
          {
            "expr": "(1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "üíø Uso %",
            "refId": "A"
          },
          {
            "expr": "avg(irate(node_disk_io_time_seconds_total{job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "‚è≥ I/O %",
            "refId": "B"
          },
          {
            "expr": "rate(node_disk_read_errors_total{job=\"node_exporter\"}[5m]) + rate(node_disk_write_errors_total{job=\"node_exporter\"}[5m])",
            "legendFormat": "üî• Err/seg",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 70}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "textMode": "auto",
          "displayMode": "gradient"
        }
      },
      {
        "id": 5,
        "title": "Network USE Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "description": "Tr√°fego de rede em tempo real (Mbps)",
        "targets": [
          {
            "expr": "(rate(node_network_receive_bytes_total{job=\"node_exporter\", device!=\"lo\"}[5m]) + rate(node_network_transmit_bytes_total{job=\"node_exporter\", device!=\"lo\"}[5m])) * 8 / 1000000",
            "legendFormat": "üåê Tr√°fego (Mbps)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "textMode": "auto",
          "displayMode": "gradient"
        }
      },
      {
        "id": 6,
        "title": "System Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "up{job=\"node_exporter\"}",
            "legendFormat": "üü¢ Status do Sistema",
            "refId": "A"
          },
          {
            "expr": "node_time_seconds{job=\"node_exporter\"} - node_boot_time_seconds{job=\"node_exporter\"}",
            "legendFormat": "‚è∞ Tempo de Atividade (segundos)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}, "1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 7,
        "title": "Process Health Indicators",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "description": "Process health metrics: Zombie processes (resource leaks), Uninterruptible sleep (I/O issues), File descriptors (resource limits)",
        "targets": [
          {
            "expr": "node_processes_state{job=\"node_exporter\", state=\"Z\"}",
            "legendFormat": "üßü Zumbis",
            "refId": "A"
          },
          {
            "expr": "node_processes_state{job=\"node_exporter\", state=\"D\"}",
            "legendFormat": "‚è∏Ô∏è I/O Block",
            "refId": "B"
          },
          {
            "expr": "node_filefd_allocated{job=\"node_exporter\"} / node_filefd_maximum{job=\"node_exporter\"} * 100",
            "legendFormat": "üìÅ FD %",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "percent",
            "decimals": 2
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "textMode": "auto",
          "displayMode": "gradient"
        }
      },
      {
        "id": 8,
        "title": "USE Method - Complete Time Series",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)",
