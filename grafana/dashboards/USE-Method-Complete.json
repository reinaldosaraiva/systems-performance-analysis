{
  "dashboard": {
    "id": null,
    "title": "USE Method - Brendan Gregg Complete Analysis",
    "tags": ["use-method", "brendan-gregg", "systems-performance", "complete"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "USE Method Overview - System Health Score",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "max(\n  max(\n    max(100 - avg by(instance)(irate(node_cpu_seconds_total{mode=\"idle\", job=\"remote-server\"}[5m]) * 100)),\n    max((1 - (node_memory_MemAvailable_bytes{job=\"remote-server\"} / node_memory_MemTotal_bytes{job=\"remote-server\"})) * 100),\n    max((1 - (node_filesystem_free_bytes{job=\"remote-server\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"remote-server\", fstype!=\"tmpfs\"})) * 100)\n  ),\n  max(node_load1{job=\"remote-server\"} / count by(instance)(node_cpu_seconds_total{mode=\"idle\", job=\"remote-server\"}) * 100)\n)",
            "legendFormat": "Overall USE Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 2,
        "title": "CPU - Utilization (U)",
