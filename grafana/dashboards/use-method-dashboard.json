{
  "dashboard": {
    "id": null,
    "title": "Systems Performance - USE Method",
    "tags": ["systems-performance", "use-method", "brendan-gregg"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"remote-server\"}",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {"steps": [{"color": "red", "value": null}, {"color": "green", "value": 1}]}
          }
        },
        "options": {"colorMode": "background", "graphMode": "none", "justifyMode": "center"}
      },
      {
        "id": 2,
        "title": "Load Average",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "node_load1{job=\"remote-server\"}",
            "legendFormat": "Load 1m",
            "refId": "A"
          },
          {
            "expr": "node_load5{job=\"remote-server\"}",
            "legendFormat": "Load 5m",
            "refId": "B"
          },
          {
            "expr": "node_load15{job=\"remote-server\"}",
            "legendFormat": "Load 15m",
            "refId": "C"
          }
        ],
        "yAxes": [{"label": "Load Average"}, {"show": false}],
        "xAxis": {"show": true}
      },
      {
        "id": 3,
        "title": "CPU Utilization - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "100 - avg by(instance)(irate(node_cpu_seconds_total{mode=\"idle\", job=\"remote-server\"}[5m]) * 100)",
            "legendFormat": "CPU Utilization %",
            "refId": "A"
          },
          {
            "expr": "avg by(instance)(irate(node_cpu_seconds_total{mode=\"iowait\", job=\"remote-server\"}[5m]) * 100)",
            "legendFormat": "I/O Wait %",
            "refId": "B"
          },
          {
            "expr": "avg by(instance)(irate(node_cpu_seconds_total{mode=\"system\", job=\"remote-server\"}[5m]) * 100)",
            "legendFormat": "System %",
            "refId": "C"
          },
          {
            "expr": "avg by(instance)(irate(node_cpu_seconds_total{mode=\"user\", job=\"remote-server\"}[5m]) * 100)",
            "legendFormat": "User %",
            "refId": "D"
          }
        ],
        "yAxes": [{"label": "Percent", "max": 100, "min": 0}, {"show": false}],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [80], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "60s",
          "handler": 1,
          "name": "CPU High Utilization",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "Memory Usage - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"remote-server\"} / node_memory_MemTotal_bytes{job=\"remote-server\"})) * 100",
            "legendFormat": "Memory Utilization %",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_SwapFree_bytes{job=\"remote-server\"} / node_memory_SwapTotal_bytes{job=\"remote-server\"})) * 100",
            "legendFormat": "Swap Utilization %",
            "refId": "B"
          }
        ],
        "yAxes": [{"label": "Percent", "max": 100, "min": 0}, {"show": false}]
      },
      {
        "id": 5,
        "title": "Memory Breakdown",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "node_memory_MemTotal_bytes{job=\"remote-server\"} - node_memory_MemAvailable_bytes{job=\"remote-server\"}",
            "legendFormat": "Used",
            "refId": "A"
          },
          {
            "expr": "node_memory_MemAvailable_bytes{job=\"remote-server\"}",
            "legendFormat": "Available",
            "refId": "B"
          }
        ]
      },
      {
        "id": 6,
        "title": "Disk Usage - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_free_bytes{job=\"remote-server\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"remote-server\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "{{mountpoint}} - {{device}}",
            "refId": "A"
          }
        ],
        "yAxes": [{"label": "Percent", "max": 100, "min": 0}, {"show": false}]
      },
      {
        "id": 7,
        "title": "Disk I/O - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "irate(node_disk_read_bytes_total{job=\"remote-server\"}[5m]) * 8",
            "legendFormat": "{{device}} Read Mbps",
            "refId": "A"
          },
          {
            "expr": "irate(node_disk_written_bytes_total{job=\"remote-server\"}[5m]) * 8",
            "legendFormat": "{{device}} Write Mbps",
            "refId": "B"
          }
        ],
        "yAxes": [{"label": "Mbps"}, {"show": false}]
      },
      {
        "id": 8,
        "title": "Network I/O - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "irate(node_network_receive_bytes_total{job=\"remote-server\", device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{device}} Receive Mbps",
            "refId": "A"
          },
          {
            "expr": "irate(node_network_transmit_bytes_total{job=\"remote-server\", device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{device}} Transmit Mbps",
            "refId": "B"
          }
        ],
        "yAxes": [{"label": "Mbps"}, {"show": false}]
      },
      {
        "id": 9,
        "title": "Network Errors/Drops - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "irate(node_network_receive_errs_total{job=\"remote-server\", device!=\"lo\"}[5m])",
            "legendFormat": "{{device}} Receive Errors",
            "refId": "A"
          },
          {
            "expr": "irate(node_network_transmit_errs_total{job=\"remote-server\", device!=\"lo\"}[5m])",
            "legendFormat": "{{device}} Transmit Errors",
            "refId": "B"
          },
          {
            "expr": "irate(node_network_receive_drop_total{job=\"remote-server\", device!=\"lo\"}[5m])",
            "legendFormat": "{{device}} Receive Drops",
            "refId": "C"
          },
          {
            "expr": "irate(node_network_transmit_drop_total{job=\"remote-server\", device!=\"lo\"}[5m])",
            "legendFormat": "{{device}} Transmit Drops",
            "refId": "D"
          }
        ],
        "yAxes": [{"label": "Rate per second"}, {"show": false}]
      },
      {
        "id": 10,
        "title": "Process Count - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 48},
        "targets": [
          {
            "expr": "node_processes_state{job=\"remote-server\", state=\"Z\"}",
            "legendFormat": "Zombie Processes",
            "refId": "A"
          },
          {
            "expr": "node_processes_state{job=\"remote-server\", state=\"D\"}",
            "legendFormat": "Uninterruptible Sleep",
            "refId": "B"
          }
        ],
        "yAxes": [{"label": "Count"}, {"show": false}]
      },
      {
        "id": 11,
        "title": "File Descriptors - USE Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 48},
        "targets": [
          {
            "expr": "node_filefd_allocated{job=\"remote-server\"}",
            "legendFormat": "Allocated FDs",
            "refId": "A"
          },
          {
            "expr": "node_filefd_maximum{job=\"remote-server\"}",
            "legendFormat": "Maximum FDs",
            "refId": "B"
          }
        ],
        "yAxes": [{"label": "Count"}, {"show": false}]
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus-Local",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "job",
          "type": "query",
          "datasource": "Prometheus-Local",
          "query": "label_values(up, job)",
          "refresh": 1,
          "includeAll": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "System Alerts",
          "datasource": "Prometheus-Local",
          "enable": true,
          "expr": "ALERTS_FOR_STATE",
          "iconColor": "red",
          "tags": ["alerts"],
          "type": "tags"
        }
      ]
    }
  }
}