{
  "dashboard": {
    "id": null,
    "title": "USE Method - Unified System Dashboard",
    "tags": ["use-method", "unified", "systems-performance", "brendan-gregg"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Score - USE Method",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "max(max(100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)) or max((1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100) or max((1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100))",
            "legendFormat": "Overall USE Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0,
            "mappings": [
              {"options": {"from": 0, "to": 69, "text": "HEALTHY", "color": "green"}, "type": "range"},
              {"options": {"from": 70, "to": 84, "text": "WARNING", "color": "yellow"}, "type": "range"},
              {"options": {"from": 85, "to": 100, "text": "CRITICAL", "color": "red"}, "type": "range"}
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "CPU - USE Method Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "Utilization % (U)",
            "refId": "A"
          },
          {
            "expr": "node_load1{job=\"node_exporter\"} / 8 * 100",
            "legendFormat": "Saturation % (S)",
            "refId": "B"
          },
          {
            "expr": "avg(irate(node_cpu_seconds_total{mode=\"steal\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "Errors % (E)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 3,
        "title": "Memory - USE Method Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100",
            "legendFormat": "Utilization % (U)",
            "refId": "A"
          },
          {
            "expr": "(node_memory_SwapTotal_bytes{job=\"node_exporter\"} > 0) * ((1 - (node_memory_SwapFree_bytes{job=\"node_exporter\"} / node_memory_SwapTotal_bytes{job=\"node_exporter\"})) * 100) or (node_memory_SwapTotal_bytes{job=\"node_exporter\"} == 0) * 0",
            "legendFormat": "Saturation % (S)",
            "refId": "B"
          },
          {
            "expr": "rate(node_vmstat_oom_kill{job=\"node_exporter\"}[5m]) * 100",
            "legendFormat": "Errors % (E)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 75},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 4,
        "title": "Disk - USE Method Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "Utilization % (U)",
            "refId": "A"
          },
          {
            "expr": "avg(irate(node_disk_io_time_seconds_total{job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "Saturation % (S)",
            "refId": "B"
          },
          {
            "expr": "rate(node_disk_read_errors_total{job=\"node_exporter\"}[5m]) + rate(node_disk_write_errors_total{job=\"node_exporter\"}[5m])",
            "legendFormat": "Errors/sec (E)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 70}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 5,
        "title": "Network - USE Method Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "(rate(node_network_receive_bytes_total{job=\"node_exporter\", device!=\"lo\"}[5m]) + rate(node_network_transmit_bytes_total{job=\"node_exporter\", device!=\"lo\"}[5m])) * 8 / 1000000",
            "legendFormat": "Throughput Mbps (U)",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_receive_drop_total{job=\"node_exporter\", device!=\"lo\"}[5m]) + rate(node_network_transmit_drop_total{job=\"node_exporter\", device!=\"lo\"}[5m])",
            "legendFormat": "Drops/sec (S)",
            "refId": "B"
          },
          {
            "expr": "rate(node_network_receive_errs_total{job=\"node_exporter\", device!=\"lo\"}[5m]) + rate(node_network_transmit_errs_total{job=\"node_exporter\", device!=\"lo\"}[5m])",
            "legendFormat": "Errors/sec (E)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 700},
                {"color": "red", "value": 800}
              ]
            },
            "unit": "Mbps"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 6,
        "title": "System Status Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "up{job=\"node_exporter\"}",
            "legendFormat": "System Status",
            "refId": "A"
          },
          {
            "expr": "node_time_seconds{job=\"node_exporter\"} - node_boot_time_seconds{job=\"node_exporter\"}",
            "legendFormat": "Uptime seconds",
            "refId": "B"
          },
          {
            "expr": "node_processes_state{job=\"node_exporter\", state=\"Z\"}",
            "legendFormat": "Zombie Processes",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}, "1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 7,
        "title": "Resource Utilization Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "CPU",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100",
            "legendFormat": "Memory",
            "refId": "B"
          },
          {
            "expr": "(1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "Disk",
            "refId": "C"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 2,
          "cellValues": {
            "decimals": 1
          },
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "max": 100,
            "min": 0,
            "mode": "opacity",
            "reverse": false,
            "scale": "linear",
            "scheme": "Oranges"
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": true
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false,
            "sort": "none",
            "decimals": 1
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "percent",
            "unitFormat": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 8,
        "title": "USE Method - Time Series Analysis",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "CPU Utilization % (U)",
            "refId": "A"
          },
          {
            "expr": "node_load1{job=\"node_exporter\"} / 8 * 100",
            "legendFormat": "CPU Saturation % (S)",
            "refId": "B"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100",
            "legendFormat": "Memory Utilization % (U)",
            "refId": "C"
          },
          {
            "expr": "(1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "Disk Utilization % (U)",
            "refId": "D"
          }
        ],
        "yAxes": [
          {"label": "Percent", "max": 100, "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [85], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "60s",
          "name": "High System Utilization",
          "notifications": []
        }
      },
      {
        "id": 9,
        "title": "Performance Bottlenecks - USE Method",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "label_replace(\n  label_replace(\n    label_replace(\n      max(100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)) * 100,\n      \"component\", \"CPU\", \"\", \"\"\n    ),\n    \"metric_type\", \"Utilization\", \"\", \"\"\n  ),\n  \"threshold\", \"80\", \"\", \"\"\n)",
            "legendFormat": "CPU Utilization",
            "refId": "A",
            "format": "table"
          },
          {
            "expr": "label_replace(\n  label_replace(\n    label_replace(\n      node_load1{job=\"node_exporter\"} / 8 * 100,\n      \"component\", \"CPU\", \"\", \"\"\n    ),\n    \"metric_type\", \"Saturation\", \"\", \"\"\n  ),\n  \"threshold\", \"20\", \"\", \"\"\n)",
            "legendFormat": "CPU Saturation",
            "refId": "B",
            "format": "table"
          },
          {
            "expr": "label_replace(\n  label_replace(\n    label_replace(\n      (1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100,\n      \"component\", \"Memory\", \"\", \"\"\n    ),\n    \"metric_type\", \"Utilization\", \"\", \"\"\n  ),\n  \"threshold\", \"85\", \"\", \"\"\n)",
            "legendFormat": "Memory Utilization",
            "refId": "C",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "cellOptions": {
                "type": "auto"
              },
              "inspect": false
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            }
          }
        },
        "options": {
          "showHeader": true,
          "cellHeight": "sm",
          "footer": {
            "show": false,
            "reducer": ["sum"],
            "countRows": false
          }
        }
      },
      {
        "id": 10,
        "title": "System Alerts Summary",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "ALERTS_FOR_STATE{alertstate=\"firing\"}",
            "legendFormat": "{{alertname}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"from": 0, "to": 0, "text": "No Active Alerts", "color": "green"}, "type": "range"},
              {"options": {"from": 1, "to": 5, "text": "Warning", "color": "yellow"}, "type": "range"},
              {"options": {"from": 6, "to": 100, "text": "Critical", "color": "red"}, "type": "range"}
            ],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["count"],
            "fields": ""
          },
          "textMode": "auto"
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus-Local",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "job",
          "type": "query",
          "datasource": "Prometheus-Local",
          "query": "label_values(up, job)",
          "refresh": 1,
          "includeAll": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "USE Method Alerts",
          "datasource": "Prometheus-Local",
          "enable": true,
          "expr": "ALERTS_FOR_STATE",
          "iconColor": "red",
          "tags": ["use-method", "alerts"],
          "type": "tags"
        }
      ]
    }
  }
}