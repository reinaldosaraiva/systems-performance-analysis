{
  "dashboard": {
    "id": null,
    "title": "Operating System Concepts - Deep Dive",
    "description": "Chapter 3: Context Switches, System Calls, CPU States, Kernel Metrics",
    "tags": ["operating-system", "kernel", "context-switches", "system-calls"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus-Local",
          "query": "label_values(up, instance)",
          "multi": false,
          "includeAll": false,
          "refresh": 1
        },
        {
          "name": "cpu",
          "type": "query",
          "datasource": "Prometheus-Local",
          "query": "label_values(node_cpu_seconds_total{instance=\"$instance\"}, cpu)",
          "multi": false,
          "includeAll": true,
          "allValue": ".*",
          "refresh": 1
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üß† CPU Mode Execution - User vs Kernel Space",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "CPU Time by Mode - User/System/IRQ/Softirq",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1},
        "targets": [
          {
            "expr": "avg(rate(node_cpu_seconds_total{instance=\"$instance\",cpu=~\"$cpu\",mode=\"user\"}[1m])) * 100",
            "legendFormat": "User Mode",
            "refId": "A"
          },
          {
            "expr": "avg(rate(node_cpu_seconds_total{instance=\"$instance\",cpu=~\"$cpu\",mode=\"system\"}[1m])) * 100",
            "legendFormat": "System (Kernel) Mode",
            "refId": "B"
          },
          {
            "expr": "avg(rate(node_cpu_seconds_total{instance=\"$instance\",cpu=~\"$cpu\",mode=\"irq\"}[1m])) * 100",
            "legendFormat": "Hardware IRQ",
            "refId": "C"
          },
          {
            "expr": "avg(rate(node_cpu_seconds_total{instance=\"$instance\",cpu=~\"$cpu\",mode=\"softirq\"}[1m])) * 100",
            "legendFormat": "Software IRQ",
            "refId": "D"
          },
          {
            "expr": "avg(rate(node_cpu_seconds_total{instance=\"$instance\",cpu=~\"$cpu\",mode=\"steal\"}[1m])) * 100",
            "legendFormat": "Steal (VM)",
            "refId": "E"
          },
          {
            "expr": "avg(rate(node_cpu_seconds_total{instance=\"$instance\",cpu=~\"$cpu\",mode=\"iowait\"}[1m])) * 100",
            "legendFormat": "I/O Wait",
            "refId": "F"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "custom": {
              "fillOpacity": 50,
              "lineInterpolation": "smooth",
              "stacking": {
                "mode": "normal",
                "group": "A"
              },
              "thresholdsStyle": {
                "mode": "line"
              }
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["mean", "last", "max"]
          }
        }
      },
      {
        "id": 3,
        "title": "Mode Switch Rate (User ‚ÜîÔ∏è Kernel)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
        "targets": [
          {
            "expr": "rate(node_cpu_seconds_total{instance=\"$instance\",mode=\"system\"}[1m]) / rate(node_cpu_seconds_total{instance=\"$instance\",mode!=\"idle\"}[1m]) * 100",
            "legendFormat": "Kernel Mode %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 50,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 40}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true,
          "text": {
            "titleSize": 16,
            "valueSize": 32
          }
        }
      },
      {
        "id": 10,
        "title": "üîÑ Context Switches & Thread Scheduling",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9}
      },
      {
        "id": 11,
        "title": "Context Switch Rate & Reasons",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "rate(node_context_switches_total{instance=\"$instance\"}[1m])",
            "legendFormat": "Context Switches/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "fillOpacity": 30,
              "lineWidth": 2,
              "gradientMode": "opacity"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10000},
                {"color": "red", "value": 50000}
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 12,
        "title": "Process States - Running/Blocked/Sleeping",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "node_procs_running{instance=\"$instance\"}",
            "legendFormat": "Running (R)",
            "refId": "A"
          },
          {
            "expr": "node_procs_blocked{instance=\"$instance\"}",
            "legendFormat": "Blocked (D)",
            "refId": "B"
          },
          {
            "expr": "node_processes_threads{instance=\"$instance\"} - node_procs_running{instance=\"$instance\"} - node_procs_blocked{instance=\"$instance\"}",
            "legendFormat": "Sleeping (S)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "fillOpacity": 40,
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Scheduler Metrics",
        "type": "table",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "topk(10, rate(node_schedstat_running_seconds_total{instance=\"$instance\"}[5m]))",
            "format": "table",
            "instant": true,
            "legendFormat": "CPU {{cpu}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "cellOptions": {
                "type": "color-background"
              }
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "CPU Time/sec"
                },
                {
                  "id": "unit",
                  "value": "percentunit"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 20,
        "title": "üìû System Calls & Interrupts",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 21,
        "title": "Interrupts Rate by Type",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "rate(node_intr_total{instance=\"$instance\"}[1m])",
            "legendFormat": "Total Interrupts/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "fillOpacity": 20,
              "lineWidth": 2,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "id": 22,
        "title": "Fork/Clone Rate (Process Creation)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 25},
        "targets": [
          {
            "expr": "rate(node_forks_total{instance=\"$instance\"}[1m])",
            "legendFormat": "Forks/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 23,
        "title": "Total Processes & Threads",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 25},
        "targets": [
          {
            "expr": "node_processes_threads{instance=\"$instance\"}",
            "legendFormat": "Total Threads",
            "refId": "A"
          },
          {
            "expr": "node_processes_pids{instance=\"$instance\"}",
            "legendFormat": "PIDs Used",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 5000}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 30,
        "title": "üíæ Memory Management - Virtual vs Physical",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 33}
      },
      {
        "id": 31,
        "title": "Page Faults - Major vs Minor",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 34},
        "targets": [
          {
            "expr": "rate(node_vmstat_pgfault{instance=\"$instance\"}[1m])",
            "legendFormat": "Minor Page Faults/sec",
            "refId": "A"
          },
          {
            "expr": "rate(node_vmstat_pgmajfault{instance=\"$instance\"}[1m])",
            "legendFormat": "Major Page Faults/sec",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "fillOpacity": 30,
              "lineInterpolation": "smooth",
              "axisPlacement": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Major Page Faults/sec"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "red",
                    "mode": "fixed"
                  }
                },
                {
                  "id": "custom.axisPlacement",
                  "value": "right"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 32,
        "title": "Swapping Activity - In/Out",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 34},
        "targets": [
          {
            "expr": "rate(node_vmstat_pswpin{instance=\"$instance\"}[1m])",
            "legendFormat": "Pages Swapped In/sec",
            "refId": "A"
          },
          {
            "expr": "rate(node_vmstat_pswpout{instance=\"$instance\"}[1m])",
            "legendFormat": "Pages Swapped Out/sec",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "fillOpacity": 30,
              "gradientMode": "hue"
            }
          }
        }
      },
      {
        "id": 33,
        "title": "TLB Statistics - Translation Lookaside Buffer",
        "type": "bargauge",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 42},
        "targets": [
          {
            "expr": "node_memory_HugePages_Total{instance=\"$instance\"}",
            "legendFormat": "Huge Pages Total",
            "refId": "A"
          },
          {
            "expr": "node_memory_HugePages_Free{instance=\"$instance\"}",
            "legendFormat": "Huge Pages Free",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0}
              ]
            }
          }
        },
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal"
        }
      },
      {
        "id": 34,
        "title": "Memory Pressure Indicators",
        "type": "stat",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 42},
        "targets": [
          {
            "expr": "rate(node_vmstat_pgpgin{instance=\"$instance\"}[1m]) * 4096",
            "legendFormat": "Page In Rate",
            "refId": "A"
          },
          {
            "expr": "rate(node_vmstat_pgpgout{instance=\"$instance\"}[1m]) * 4096",
            "legendFormat": "Page Out Rate",
            "refId": "B"
          },
          {
            "expr": "node_memory_Dirty_bytes{instance=\"$instance\"}",
            "legendFormat": "Dirty Memory",
            "refId": "C"
          },
          {
            "expr": "node_memory_Writeback_bytes{instance=\"$instance\"}",
            "legendFormat": "Writeback",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "binBps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1048576},
                {"color": "red", "value": 10485760}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Memory.*"},
              "properties": [{"id": "unit", "value": "bytes"}]
            }
          ]
        }
      },
      {
        "id": 40,
        "title": "üöÄ Advanced Kernel Metrics",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 48}
      },
      {
        "id": 41,
        "title": "CPU Run Queue Length",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 49},
        "targets": [
          {
            "expr": "node_load1{instance=\"$instance\"}",
            "legendFormat": "1min Load",
            "refId": "A"
          },
          {
            "expr": "count(node_cpu_seconds_total{instance=\"$instance\",mode=\"idle\"})",
            "legendFormat": "CPU Count",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 42,
        "title": "Kernel Tables Usage",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 49},
        "targets": [
          {
            "expr": "node_filefd_allocated{instance=\"$instance\"} / node_filefd_maximum{instance=\"$instance\"} * 100",
            "legendFormat": "File Descriptors %",
            "refId": "A"
          },
          {
            "expr": "node_processes_pids{instance=\"$instance\"} / node_processes_max_processes{instance=\"$instance\"} * 100",
            "legendFormat": "Process Table %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      }
    ]
  }
}