{
  "dashboard": {
    "id": null,
    "title": "USE Method - Fixed Analysis",
    "tags": ["use-method", "fixed", "systems-performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Score (USE Method)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "max(max(100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)) or max((1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100) or max((1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100))",
            "legendFormat": "Overall USE Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 2,
        "title": "CPU - Utilization (U)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "CPU Utilization %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 3,
        "title": "Memory - Utilization (U)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100",
            "legendFormat": "Memory Utilization %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 75},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 4,
        "title": "Disk - Utilization (U)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "Disk Utilization %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 70}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 5,
        "title": "CPU Saturation (S)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "node_load1{job=\"node_exporter\"} / 8 * 100",
            "legendFormat": "CPU Saturation %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 15},
                {"color": "red", "value": 20}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 6,
        "title": "Memory Saturation (S)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "(node_memory_SwapTotal_bytes{job=\"node_exporter\"} > 0) * ((1 - (node_memory_SwapFree_bytes{job=\"node_exporter\"} / node_memory_SwapTotal_bytes{job=\"node_exporter\"})) * 100) or (node_memory_SwapTotal_bytes{job=\"node_exporter\"} == 0) * 0",
            "legendFormat": "Swap Utilization %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 7,
        "title": "Network Utilization (U)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "(rate(node_network_receive_bytes_total{job=\"node_exporter\", device!=\"lo\"}[5m]) + rate(node_network_transmit_bytes_total{job=\"node_exporter\", device!=\"lo\"}[5m])) * 8 / 1000000",
            "legendFormat": "Network Mbps",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 700},
                {"color": "red", "value": 800}
              ]
            },
            "unit": "Mbps"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 8,
        "title": "USE Method Analysis - Time Series",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "100 - avg(irate(node_cpu_seconds_total{mode=\"idle\", job=\"node_exporter\"}[5m]) * 100)",
            "legendFormat": "CPU Utilization % (U)",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})) * 100",
            "legendFormat": "Memory Utilization % (U)",
            "refId": "B"
          },
          {
            "expr": "(1 - (node_filesystem_free_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{job=\"node_exporter\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "Disk Utilization % (U)",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "Percent", "max": 100, "min": 0},
          {"show": false}
        ]
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus-Local",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    }
  }
}